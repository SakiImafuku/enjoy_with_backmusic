<!DOCTYPE html>
<html>
  <%= render 'layouts/head' %>
  <body>
    <%= render 'layouts/header' %>
    <main>
      <div class="container">
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= bootstrap_alert(key) %>"><%= value %></div>
        <% end %>
        <%= yield %>
      </div>
    </main>
    <%= render 'layouts/footer' %>
  </body>
</html>
