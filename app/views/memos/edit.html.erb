<%= render 'layouts/musicpost_tab', musicpost: @musicpost, composer: @composer, instrument: @instrument %>
<div class="row">
  <div class="col-md-12 memo_field">
    <%= form_with(model: @memo, url: memo_path, local:true) do |f| %>
      <%= hidden_field_tag :musicpost_id, @musicpost.id %>
      <%= f.text_area :memo, value: @memo.memo %>
      <%= f.submit "更新", class: "btn btn-primary" %>
      <%= button_to 'キャンセル', memos_path, class: "btn btn-secondary" %>
    <% end %>

  </div>
</div>