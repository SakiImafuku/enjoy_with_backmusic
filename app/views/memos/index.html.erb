<% provide(:title, "#{@musicpost.title}のメモ") %>
<%= render 'layouts/musicpost_tab', musicpost: @musicpost, composer: @composer, instrument: @instrument %>
<div class="row">
  <div class="col-md-12 memo_field">
    <% if @memo.blank? %>
      <%= form_with(model: @memo, url: memos_path, local:true) do |f| %>
        <%= hidden_field_tag :musicpost_id, @musicpost.id %>
        <%= f.text_area :memo, placeholder: "メモを入力..." %>
        <%= f.submit "作成", class: "btn btn-primary" %>
      <% end %>
    <% else %>
      <p><%= simple_format(@memo.memo) %></p>
      <div class="memo_btn">
        <%= button_to '編集', edit_memo_path, method: :get, class: "btn btn-primary" %>
        <%= button_to '削除', memo_path, method: :delete, class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>